@model IEnumerable<MainSite.Areas.Admin.Models.Users.UserRoleModel>

@{
    //page title
    ViewBag.Title = "Роли пользователей";
    Layout = "_Layout";
}
@section Scripts
    {

    <script src="~/js/CustomScripts/search.js"></script>
}

<div class="col m12">
    <h2 class="center">Список ролей</h2>


    <div class="card-panel">
        <div class="input-field">
            <i class="material-icons prefix">search</i>
            <input type="text" class="search" id="search" onkeyup="inputFilter()">
            <label for="search">Поиск</label>
        </div>
    </div>

    <div class="card-panel">
        <table class="striped centered highlight">
            <thead>
                <tr>
                    <th>Роль</th>
                    <th>Права</th>
                    <th>
                        <p>
                            <a href="@Url.Action("Create")" class="waves-effect waves-light btn">
                                <i class="material-icons left">add</i>Добавить роль
                            </a>
                        </p>
                    </th>
                </tr>
            </thead>
            <tbody id="record_list" class="black-text">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <ul>
                                @foreach (var permission in item.PermissionNames)
                                {
                                    <li>@permission</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <a class="waves-effect waves-light btn" href="@Url.Action("Edit", "UserRole", new {id = item.Id})">Изменить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>



