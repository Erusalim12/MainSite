@inject Application.Services.News.INewsService news;

@{
    Layout = null;
}

<div class="card-panel row">
    @foreach (var item in news.GetNewsItem())
    {
        <div class="card_news">
            <div class="card_news-image"><img src="@item.UrlImg" alt="" /></div>
            <div class="card_news-main">
                <div class="card_news-main-header"><span class="bold">@item.AutorFio</span> разместил сообщение в разделе <a href="@item.MenuItemAction">@item.MenuItemName</a></div>
                <div class="card_news-main-title"><a href="@Url.Action("Details", @item.NameAction, new { id = item.Id})">@item.Name</a></div>
                <div class="card_news-main-footer">@item.CreatedDate</div>
            </div>

            <div class="card_news-editor">
                <a href="@Url.Action("Edit", @item.NameAction, new { id = item.Id})"><i class="material-icons">edit</i></a>
                <a href="@Url.Action("Delete", @item.NameAction, new { id = item.Id})" class="error"><i class="material-icons">close</i></a>
            </div>
        </div>
    }
</div>