@model MainSite.Models.News.NewsItemModel

@{
    Layout = null;
}

<div class="creator">
    <div class="card-panel creator-main" v-bind:class="classObject">
        <a class="error close" v-on:click="showCreator(false, true)"><i class="material-icons">close</i></a>

        <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="input-field s12 m12">
                    <i class="material-icons prefix">textsms</i>
                    <textarea asp-for="Header" id="TextHeader" class="materialize-textarea"></textarea>
                    <label class="active bold" for="TextHeader">Введите заголовок объявления</label>
                </div>
                <div class="input-field s12 m12">
                    <i class="material-icons prefix">message</i>
                    <textarea asp-for="Description" id="TextDescription" class="materialize-textarea"></textarea>
                    <label class="active bold" for="TextDescription">Введите текстовое объявление</label>
                </div>
            <div class="file-field input-field creator-main-panel s12 m12">
                <div class="btn btn-defaultMainSite">
                    <span>Прикрепить файл...</span>
                    <input type="file" asp-for="UploadedFiles" multiple>
                </div>
                <div class="file-path-wrapper" style="flex-grow: 1;">
                    <input disabled class="file-path" style="border: none;" type="text" placeholder="Список выбранных файлов">
                </div>
                <input type="submit" value="Опубликовать" class="btn btn-defaultMainSite" />
            </div>
            <div class="form-group">

            </div>
        </form>
    </div>
    <div class="creator-menu" v-bind:class="classObject">
        <button class="btn btn-defaultMainSite" v-on:click="showCreator(true, false)">Новое сообщение</button>
    </div>
</div>
