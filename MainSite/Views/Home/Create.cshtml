@model MainSite.ViewModels.News.NewsItemViewModel

@{
    Layout = null;
}

<div class="creator">
    <div class="card-panel creator-main" @*v-bind:class="classObject"*@>
        @await Component.InvokeAsync("CategoryPathComponent", @Model.CategoryId)
        <a class="error close" v-on:click="showCreator(false, true)"><i class="material-icons">close</i></a>

        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <input asp-for="CategoryId" type="hidden" value="@Model.CategoryId" />
            <input asp-for="Author" type="hidden" value="@User.Identity.Name" />
            <div class="s12 m12">
                <div class="bold">Введите заголовок объявления:</div>
                <input asp-for="Header" id="TextHeader" class="inputTextMainSite" type="text" />
            </div>
            <p class="s12 m12">
                <div class="bold">Введите текстовое объявление:</div>
                <textarea asp-for="Description" id="TextDescription" class="inputTextMainSite" height="300"></textarea>
            </p>
            <div class="file-field input-field creator-main-panel s12 m12">
                <div class="btn btn-defaultMainSite">
                    <span>Прикрепить файл...</span>
                    <input type="file" asp-for="UploadedFiles" multiple>
                </div>
                <div class="file-path-wrapper" style="flex-grow: 1;">
                    <input disabled class="file-path" style="border: none;color: #65935C;" type="text" placeholder="Список выбранных файлов">
                </div>
                <input type="submit" value="Опубликовать" class="btn btn-defaultMainSite" />
            </div>
        </form>
    </div>
    <div class="creator-menu" @*v-bind:class="classObject"*@>
        <button class="btn btn-defaultMainSite" v-on:click="showCreator(true, false)">Новое сообщение</button>
    </div>
</div>
